<div class="row g-0 text-center text-sm-start">


    <div class="col-sm-12 d-flex justify-content-center ">
        <ul
            class="pagination pagination-rounded justify-content-center justify-content-sm-end mb-sm-0">
            <li class="page-item disabled">
                <a href="#" class="page-link"><i
                        class="mdi mdi-chevron-left"></i></a>
            </li>

            <% if (locals.currentPage > 1) { %>
            <li class="page-item">
                <a href="?page=<%= locals.currentPage - 1 %>" class="page-link"></a>
            </li>
            <% } %>

            <% for (let i = 1; i <= locals.pages; i++) { %>
            <li class="page-item <%= locals.currentPage === i ? 'active' : '' %>">
                <a href="?page=<%= i %>" class="page-link"><%= i %></a>
            </li>
            <% } %>
            <% if (locals.currentPage < locals.pages) { %>
            <li class="page-item">
                <a href="?page=<%= locals.currentPage + 1 %>" class="page-link"></a>
            </li>
            <% } %>
            <!-- <li class="page-item">
                <a href="#" class="page-link">4</a>
            </li>
            <li class="page-item">
                <a href="#" class="page-link">5</a>
            </li> -->
            <li class="page-item">
                <a href="#" class="page-link"><i
                        class="mdi mdi-chevron-right"></i></a>
            </li>
        </ul>
    </div><!-- end col -->
</div><!-- end row -->