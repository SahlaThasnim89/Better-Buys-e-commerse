    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    


    <script>
        const form = document.getElementById(`myForm`);
        const inp = form.querySelectorAll('input');
        const textArea=document.querySelector('textarea');

        form.addEventListener('submit',(data)=>{
            let flag=true;
            inp.forEach(elem=>{
                if(elem.value.trim()==''&& textArea.value.trim()==''){
                    flag=false
                }
            })
            if(flag !==true){
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "plaese fill the all inputs!",
                   
                });
                data.preventDefault()
            }
        })


        document.getElementById('productname').addEventListener('input', function(event) {
    const firstName = this.value.trim();
    const firstNameRegex = /^[a-zA-Z]+(?: [a-zA-Z]+)*$/;
    const firstNameError = document.getElementById('firstNameError');
    const submitBtn = document.getElementById('submitBtn');


    
    if (!firstNameRegex.test(firstName)) {
        firstNameError.textContent = 'Invalid Name';
        submitBtn.disabled = true;
    } else {
        firstNameError.textContent = ''; 
        submitBtn.disabled = false;
    }
});

document.getElementById('myForm').addEventListener('submit', function(event) {
    event.preventDefault();

    const submitBtn = document.getElementById('submitBtn');
    if (!submitBtn.disabled) {
        this.submit();
    }
});
    </script>

